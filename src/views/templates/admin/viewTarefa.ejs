
<%- include ('../../partials/header.ejs') %> 
<%- include ('../../partials/telaAdmin.ejs') %> 
        <div class="w-100 bg-white shadow-lg mb-1 rounded row align-items-center">
            <div class="d-flex flex-row justify-content-center  align-items-center h-100">
                <div class="user-dados  gradient-custom shadow-lg  mb-1 rounded text-center overflow-auto">
                    <form method="POST" action="/deleteItem" id="formDelete">
                                <div class="d-flex flex-column">
                                    
                                    <div class="mt-3">
                                        <h1 class=""> <%= tarefa.nome %> </h1> 
                                    </div>
                                    <div class="menu-button-item mx-auto gradient-custom-2  shadow-lg  mb-3 mt-3 rounded ">
                                        <a type="button" data-toggle="modal" data-target="#modalCriarItem">
                                            <i class="bi bi-file-earmark-plus-fill"></i>
                                        </a>

                                        <a href="javascript:{}" onclick="document.getElementById('formDelete').submit();">
                                            <i class="bi bi-file-earmark-x-fill"></i>
                                        </a>
                                                        
                                        
                                    </div>

                                    
                            
                                  
                                </div>
                            
                                <div class="px-5 mx-5">
                                    <% item.forEach(item => { %>
                                                <% if(item.tarefaId == tarefa.id)  { %>
                                                    <div class="form-check d-flex justify-content-start ml-5">
                                                        <input class="form-check-input" type="checkbox" value="<%= item.id %>" name="checkbox" id="flexCheckDefault">
                                                        <label class="form-check-label px-2" for="flexCheckDefault">
                                                        <input type="hidden" name="idTarefa" value="<%= item.tarefaId %>">
                                                        <%= item.nome %>
                                                        </label>
                                                    </div>
                                                <% } %>
                                        
                                    <% }) %>
                            </div>
                        </form>
                           <form method="POST" action="/apagarConta" onsubmit="confirmarDeletarConta(event, this)">
                            <div class="d-block mt-5">
                                
                                <button  class="btn btn-danger m-4">APAGAR LISTA</button>
                                <button  class="btn gradient-custom-2" style="color:white">SALVAR ALTERAÇÕES</button>
                            </div>
                           </form>
    
    
                
                </div>
            </div>

            <!-- Modal CRIAR ITEM-->
            <div class="modal fade" id="modalCriarItem" tabindex="-1" role="dialog" aria-labelledby="modalTitle" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="modalTitle">Criar Lista</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>

                    <form method="POST" action="/criarItem">
                        <div class="modal-body">
                            <div class="form-outline text-center ">
                                <label >Insira o item</label>
                                <input type="text" class="form-control " placeholder="Digite o nome da lista" name="nome">
                                <input type="hidden" class="form-control " value="false" name="check">
                                <input type="hidden" class="form-control " value="<%= tarefa.id %>" name="tarefaId">
                            </div>
                
                           
                        </div>
                
                        <div class="modal-footer">
                            <button type="button" class="btn gradient-custom" onclick="submeterForm(this.form)">Save changes</button>
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        </div>
                    </form>
            
                  
                </div>
                </div>
            </div>
                    
        </div>

    </div>
</section>

<script>
    function submeterForm(form) {
        form.submit();
    }  

</script>

<%- include ('../../partials/footer.ejs') %> 