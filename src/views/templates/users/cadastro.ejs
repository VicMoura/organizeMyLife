<section class="vh-100 gradient-form section-small" style="background-color: #eee;"> 
    <div class="container py-5 h-100 d-flex flex-row">
        <div class="w-50 gradient-custom shadow-lg p-3 mb-1 rounded row align-items-center">
            <div class="col mx-auto text-center">
                <img src="logo.png" class="img-fluid mw-100 h-auto" >
            </div>
        </div>

        <div class="w-50 bg-white shadow-lg pt-5 mb-1 rounded d-flex flex-column align-items-center">
                <div class="pt-5 h-70 ">
                    <div class="d-flex justify-content-center mt-2">
                        <h2>Cadastre-se</h2>
                    </div>
                    <h6 class="text-center">FaÃ§a o cadastro para logar</h6>
                </div>

